.activities_details {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #262626;
  z-index: 200;
  padding: 1.25rem;
}
.activities_details .activities_shoptitle {
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}

.activities_subtitle_container {
  text-align: center;
  margin-bottom: 1rem;
}
.activities_details .activities_list, .activities_shopinfo {
  margin-top: 1.5rem;
  margin-bottom: 1rem;
  font-size: .6rem;
  color: #fff;
}

.activities_details .activities_subtitle {
  display: inline-block;
  font-size: .5rem;
  color: #fff;
  border: .025rem solid #555;
  padding: .2rem .4rem;
  border-radius: .5rem;
}

.activities_details .activities_list_item {
  border-bottom: 1px dashed #777;
  padding: .14rem;
}

.activities_details .activities_list_item .activities_icon{
  padding: 0 .02rem;
  display: inline-block;
  border: .025rem solid #fff;
  border-radius: .1rem;
}


