.container {
    display: flex;
    height: 100%;
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
}

.headcontainer{
    flex:1;
    width: 100%;
    height: 200px;
    display: flex;
}
.favorities {
    width: 30px;
    height: 30px;
    position: fixed;
    z-index: 100;
    top: 10px;
    right: 20px;
}

.logo, .mr {
    width: 100%;
    flex: 2;
    display: flex;
    z-index: 0;
}

.logo image.logo {
    width: 100%;
}

.mealorder, .recharge, .account, .wifi {
    flex: 1;
    display: flex;
    padding: 20px;
    color: #fefefe;
    align-items: center;
}

.content {
    flex: 1;
}

.icon {
    width: 30px;
    height: 30px;
}

.mealorder {
    background-color: rgb(100, 150, 200);
}

.recharge {
    background-color: rgb(200, 120, 180);
}

.account {
    background-color: rgb(170, 190, 230);
}

.wifi {
    background-color: rgb(120, 190, 210);
}

.mr .title {
    font-size: 14px;
    font-weight: 300;
}

.mr .desc {
    font-size: 11px;
    font-weight: 300;
}

.line1, .line2 {
    border-top: 8px solid #fff;
}

.col1 {
    border-right: 8px solid #fff;
}
