.container {
    display: flex;
    height: 100%;
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
}

.headcontainer {
    flex: 1;
    width: 100%;
    height: 200px;
    display: flex;
}

.favorities {
    width: 30px;
    height: 30px;
    position: fixed;
    z-index: 100;
    top: 10px;
    right: 20px;
}

.logo, .mr {
    width: 100%;
    flex: 2;
    display: flex;
    z-index: 0;
}

.logo image.logo {
    width: 100%;
}

.mealorder, .recharge, .reservation, .queue, .profile, .wifi, .pay {
    flex: 1;
    display: flex;
    padding: 20px;
    color: #fefefe;
    align-items: center;
    /* border-radius: 5px; */
}

.content {
    flex: 1;
}

.icon {
    width: 30px;
    height: 30px;
}

.mealorder {
    background-color: rgb(90, 140, 90);
}

.recharge {
    background-color: rgb(150, 120, 180);
}

.reservation {
    background-color: rgb(60, 120, 170);
}

.queue {
    background-color: rgb(100, 220, 180);
}

.pay {
    background-color: rgb(80, 140, 130);
}

.profile {
    background-color: rgb(170, 190, 230);
}

.wifi {
    background-color: rgb(120, 190, 210);
}

.mr .title {
    font-size: 14px;
    font-weight: 300;
}

.mr .desc {
    font-size: 11px;
    font-weight: 300;
}

.line1, .line2 {
    border-top: 8px solid #fff;
}

.col1 {
    border-right: 8px solid #fff;
}
