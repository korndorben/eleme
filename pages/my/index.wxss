.container {
    display: flex;
    font-weight: 300;
}

.prifile {
    flex: 1;
    background-color: #2a80b9;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.userinfo-avatar {
    width: 100px;
    border: 1px solid #fff;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    padding: 10px;
}

.usrmobile {
    font-size: 14px;
}

.userinfo-desc {
    padding: 10px;
    font-size: 12px;
}

.userinfo-assets {
    display: flex;
    width: 100%;
    font-size: 13px;
    background-color: rgb(240, 240, 240);
    color: rgb(20, 20, 20);
}

.as1 {
    padding-top: 10px;
}

.as2 {
    padding-bottom: 10px;
}

.userinfo-assets .balance, .userinfo-assets .integral, .userinfo-assets .level {
    flex: 1;
    text-align: center;
}

.userinfo-assets .balance, .userinfo-assets .integral {
    border-right: 1px solid rgb(220, 220, 220);
}

.list {
    flex: 1;
    width: 90%;
}

.title {
    font-size: 16px;
    font-weight: 300;
}

.desc {
    font-size: 12px;
    font-weight: 300;
}

.account {
    /* background-color: rgb(180,120,200); */
    padding: 10px 0;
    border-bottom: 1px solid rgb(240, 240, 240);
    display: flex;
    align-items: center;
    color: rgb(100, 100, 100);
}

.account .content {
    flex: 1;
}

.account .ico {
    width: 27px;
}

.account .ico image, .account .more image {
    width: 18px;
}
