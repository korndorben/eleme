@import "../components/head.wxss";
page {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.container {
    font-weight: 300;
    font-size: 14px;
    display: flex;
    width: 100%;
    background-color: #f5f5f5;
    justify-content: flex-start;
    flex: 1;
}

.mealcodecontainer, .mealcode, .shopname, .products, .paymentmethod, .eattime, .remark, .control {
    width: 100%;
    position: relative;
}

cover-view.mealcode {
    position: absolute;
    text-align: center;
    width: 100%;
    top: 30px;
    font-size: 52px;
    font-weight: 700;
    color: #fff;
}

cover-view.mealcodetips {
    position: absolute;
    text-align: center;
    bottom: 15px;
    width: 100%;
    color: #fff;
}

.shopname {
    font-size: 16px;
    border-bottom: 1px solid #eee;
    padding: 10rpx;
}

.products {
    width: 90%;
    display: flex;
    flex-direction: column;
    padding: 10rpx;
}

.products .item {
    display: flex;
    flex-direction: row;
    padding: 10rpx 0;
}

.products .item .name, .products .item .quantity, .products .item .total,.customertotal {
    flex: 1;
    text-align: right;
}
.customertotal{
    color: #ff6600;
}

.products .item .name {
    text-align: left;
}
.products .last{
    border-top: 1px solid #f5f5f5;
}

.paymentmethod {
    width: 90%;
    padding: 20rpx 0;
    border-bottom: 1px solid #f5f5f5;
    flex:1;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.paymentmethod .paymentmethod_title {
    flex: 1;
}

.paymentmethod .paymentmethod_options {
    flex: 1;
    text-align: right;
}

.eattime {
    padding: 20rpx 0;
    border-bottom: 1px solid #eee;
}

.remark {
    padding: 20rpx 0;
    border-bottom: 1px solid #eee;
    display: flex;
}

.remark textarea {
    wdith: 100%;
    flex: 1;
}

.control {
    position: fixed;
    bottom: 10px;
    display: flex;
    width: 90%;
}

.control .dine {
    flex: 1;
}

.block {
    width: 100%;
    background-color: #fff;
    border-bottom: 1px solid #ccc;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.forcoding {
    margin-top: 10px;
}

.last {
    border: 0;
}
